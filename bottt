import telebot
from telebot import types
from dotenv import load_dotenv
import os

load_dotenv()
# –ü–æ–ª—É—á–∞–µ–º –ø–µ—Ä–µ–º–µ–Ω–Ω—ã–µ –æ–∫—Ä—É–∂–µ–Ω–∏—è
bot = telebot.TeleBot(os.getenv('TOKEN'))

@bot.message_handler(commands=['start'])
def main(message):
    bot.send_message(message.chat.id, '–ü—Ä–∏–≤–µ—Ç—Å—Ç–≤—É—éüëã! –ò—Å–ø–æ–ª—å–∑—É–π—Ç–µ –∫–æ–º–∞–Ω–¥—É /books, —á—Ç–æ–±—ã —è —Å–º–æ–≥ –ø–æ–¥–æ–±—Ä–∞—Ç—å –¥–ª—è –í–∞—Å –∫–Ω–∏–≥—Éüìî')
    markup = types.ReplyKeyboardMarkup()
    btn1 = types.KeyboardButton('/books')
    markup.row(btn1)
    bot.send_message(message.chat.id, '‚§µÔ∏è', reply_markup=markup)

@bot.message_handler(commands=['books'])
def main(message):
    markup = types.ReplyKeyboardMarkup()
    btn1 = types.KeyboardButton('A2-B1')
    markup.row(btn1)
    btn2 = types.KeyboardButton('B2-C1')
    markup.row(btn2)
    bot.send_message(message.chat.id, '–£–∫–∞–∂–∏—Ç–µ –≤–∞—à —É—Ä–æ–≤–µ–Ω—å –≤–ª–∞–¥–µ–Ω–∏—è –∞–Ω–≥–ª–∏–π—Å–∫–∏–º —è–∑—ã–∫–æ–ºüá¨üáß:', reply_markup=markup)
    bot.register_next_step_handler(message, on_click)

def on_click(message):
    if message.text == 'A2-B1':
        bot.send_message(message.chat.id, '‚úÖ–†–µ–∫–æ–º–µ–Ω–¥—É–µ–º—ã–µ –∫–Ω–∏–≥–∏ –¥–ª—è –í–∞—Å: \n‚Ä¢–î–µ—Ç–µ–∫—Ç–∏–≤: Sherlock Holmes by Arthur Conan Doyle, \n‚Ä¢–§–∞–Ω—Ç–∞—Å—Ç–∏–∫–∞: The Wizard of Oz by L. Frank Baum, \n‚Ä¢–†–æ–º–∞–Ω—Ç–∏–∫–∞: Love or Money by Rowena Akinyemi, \n‚Ä¢–ö–ª–∞—Å—Å–∏–∫–∞: Great Expectations by Charles Dickens')
    elif message.text == 'B2-C1':
        bot.send_message(message.chat.id, '‚úÖ–†–µ–∫–æ–º–µ–Ω–¥—É–µ–º—ã–µ –∫–Ω–∏–≥–∏ –¥–ª—è –í–∞—Å: \n‚Ä¢–î–µ—Ç–µ–∫—Ç–∏–≤: The Da Vinci Code by Dan Brown, \n‚Ä¢–§–∞–Ω—Ç–∞—Å—Ç–∏–∫–∞: Harry Potter and the Philosopher‚Äôs Stone by J.K. Rowling, \n‚Ä¢–†–æ–º–∞–Ω—Ç–∏–∫–∞: Pride and Prejudice by Jane Austen, \n‚Ä¢–ö–ª–∞—Å—Å–∏–∫–∞: 1984 by George Orwell')

@bot.message_handler(commands=['help'])
def main(message):
    bot.send_message(message.chat.id, '–ú–æ–∏ –∫–æ–º–∞–Ω–¥—ãüôã‚Äç‚ôÇÔ∏è: \n/start - –ó–∞–ø—É—Å—Ç–∏—Ç—å –±–æ—Ç–∞ \n/books - –í—ã–±—Ä–∞—Ç—å –ø–æ–¥—Ö–æ–¥—è—â–∏–π —É—Ä–æ–≤–µ–Ω—å –∞–Ω–≥–ª–∏–π—Å–∫–æ–≥–æ —è–∑—ã–∫–∞ \n/info - –ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è –æ –±–æ—Ç–µ')

@bot.message_handler(commands=['info'])
def main(message):
    bot.send_message(message.chat.id, 'üëã–ü—Ä–∏–≤–µ—Ç—Å—Ç–≤—É—é! –î–∞–Ω–Ω—ã–π –±–æ—Ç - —Ä–∞–∑—Ä–∞–±–æ—Ç–∫–∞ —Å—Ç—É–¥–µ–Ω—Ç–æ–≤ –∫—É—Ä—Å–∞ "–¶–∏—Ñ—Ä–æ–≤–æ–π –ø–µ—Ä–µ–≤–æ–¥—á–∏–∫" –∏–Ω—Å—Ç–∏—Ç—É—Ç–∞ –í–®–ú–û–∏–ú–ò –ò–ú–û–ò–∏–í. \n\n‚úÖ–≠—Ç–æ—Ç –±–æ—Ç –ø—Ä–µ–¥–Ω–∞–∑–Ω–∞—á–µ–Ω –¥–ª—è —Ç–æ–≥–æ —á—Ç–æ–±—ã —Ä–µ–∫–æ–º–µ–Ω–¥–æ–≤–∞—Ç—å –ª–∏—Ç–µ—Ä–∞—Ç—É—Ä—É –Ω–∞ –∞–Ω–≥–ª–∏–π—Å–∫–æ–º —è–∑—ã–∫–µ. –¶–µ–ª—å—é –¥–∞–Ω–Ω–æ–≥–æ –±–æ—Ç–∞ —è–≤–ª—è–µ—Ç—Å—è —É–ø—Ä–æ—â–µ–Ω–∏–µ –ø–æ–∏—Å–∫–∞ –Ω—É–∂–Ω–æ–π –ª–∏—Ç–µ—Ä–∞—Ç—É—Ä—ã –¥–ª—è –æ–∑–Ω–∞–∫–æ–º–ª–µ–Ω–∏—è –∏ –≤–æ–∑–º–æ–∂–Ω–æ–≥–æ –ø–æ—Å–ª–µ–¥—É—é—â–µ–≥–æ –ø—Ä–æ—á—Ç–µ–Ω–∏—è. \n\nüòä–°–ø–∞—Å–∏–±–æ –∑–∞ —Ç–æ, —á—Ç–æ –≤–æ—Å–ø–æ–ª—å–∑–æ–≤–∞–ª–∏—Å—å –Ω–∞—à–∏–º –±–æ—Ç–æ–º!')

bot.polling(none_stop=True)

